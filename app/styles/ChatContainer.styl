@import "application"

header-height = 64px
soft-blue = #445BA2
bubble-color = white
bubble-color-me = soft-blue
side-padding = 36px

#chat-container
  width 100%
  height 100%
  display flex
  display -webkit-flex
  flex-direction column
  // background blue
  
  #chat-header
    height 64px
    width 100%
    flex-grow 0
    flex-shrink 0
    padding-left 12px
    display flex
    display -webkit-flex
    // border-bottom 2px solid rgba(99,99,99,0.5)
    // box-shadow 0 2px 3px rgba(0,0,0,0.12), 0 2px 2px rgba(0,0,0,0.12)
    // background red
    
    .header-body
      flex-grow 1

      .chat-title
        margin-top 12px
        line-height 26px
        font-size 18px
        font-weight 700
      
      .chat-meta
        // margin-top 4px
        line-height 14px
        font-size 12px
        color grey - 50%
    
    .header-icon
      padding 8px
      color grey - 50%
    
  #chat-msg-area
    flex-grow 1
    padding 24px side-padding 0
    overflow scroll
    // background green
    
  #chat-input
    min-height 64px
    flex-shrink 0
    // background yellow
    display flex
    display -webkit-flex
    align-items center
    justify-content center

.chat-msg-item
  margin-bottom 12px
  display flex
  display -webkit-flex
  flex-direction column
  align-items flex-start
  .chat-author
    font-size 12px
    color grey - 50%
  .chat-primary
    width 80%
    margin-top 8px
    display flex
    display -webkit-flex
    // background green
  .chat-avatar
    padding 0 6px 6px
    flex-shrink 0
    // background red
  .chat-bubble
    border-radius 6px
    padding 8px
    font-size 13px
    font-weight 300
    background bubble-color
    & > *
      margin 0
  .chat-timestamp
    font-size 12px
    margin-top 6px
    color grey - 50%
  
  &.you
    text-align right
    align-items flex-end
    .chat-primary 
      flex-direction row-reverse

    .chat-bubble
      text-align left
      color white
      background bubble-color-me
    