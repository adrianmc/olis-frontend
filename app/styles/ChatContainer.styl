@import "application"

header-height = 64px
soft-blue = #445BA2
bubble-color = white
bubble-color-me = soft-blue
side-padding = 36px

#chat-container
  width 100%
  height 100%
  display flex
  display -webkit-flex
  flex-direction column
  background-repeat repeat
  background-image url('http://subtlepatterns2015.subtlepatterns.netdna-cdn.com/patterns/diamond_upholstery.png')
  // background blue
  
  #chat-header
    height 64px
    width 100%
    flex-grow 0
    flex-shrink 0
    padding-left 12px
    display flex
    display -webkit-flex
    z-index 1
    background grey
    // border-bottom 1px solid #ff4081
    // box-shadow 0 2px 6px rgba(0,0,0,0.12), 0 2px 4px rgba(0,0,0,0.12)
    // background red
    
    .header-body
      flex-grow 1

      .chat-title
        margin-top 12px
        line-height 26px
        font-size 18px
        font-weight 700
      
      .chat-meta
        // margin-top 4px
        line-height 14px
        font-size 12px
        color grey - 50%
    
    .header-icon
      padding 8px
      color grey - 50%
    
  #chat-msg-area
    flex-grow 1
    overflow scroll
    padding 24px side-padding 0
    
  #chat-input
    min-height 64px
    flex-shrink 0
    z-index 1
    background grey
    // box-shadow 0 -2px 6px rgba(0,0,0,0.12), 0 -2px 4px rgba(0,0,0,0.12)
    display flex
    display -webkit-flex
    align-items center
    justify-content center
    
    .chat-input-bubble
      width 100%
      height 100%
      display flex
      display -webkit-flex
      align-items center
      justify-content center
      background white
      margin 12px
      border-radius 3px

.chat-msg-item
  margin-bottom 12px
  display flex
  display -webkit-flex
  flex-direction column
  align-items flex-start
  .chat-author
    font-size 12px
    color grey - 50%
  .chat-primary
    width 80%
    margin-top 8px
    display flex
    display -webkit-flex
    // background green
  .chat-avatar
    padding 0 6px 6px
    flex-shrink 0
    // background red
  .chat-bubble
    border-radius 6px
    padding 8px
    font-size 14px
    font-weight 300
    background bubble-color
    & > *
      margin 0
  .chat-timestamp
    font-size 12px
    margin-top 6px
    color grey - 50%
  
  &.you
    text-align right
    align-items flex-end
    .chat-primary 
      flex-direction row-reverse

    .chat-bubble
      text-align left
      color white
      background bubble-color-me
    