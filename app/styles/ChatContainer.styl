@import "application"

header-height = 64px

#chat-container
  width 100%
  height 100%
  display flex
  display -webkit-flex
  flex-direction column
  // background blue
  
  #chat-header
    height 64px
    flex-grow 0
    padding-left 12px
    display flex
    display -webkit-flex
    // background red
    
    .header-body
      flex-grow 1

      .chat-title
        margin-top 12px
        line-height 26px
        font-size 24px
        font-weight 700
      
      .chat-meta
        margin-top 4px
        line-height 14px
        font-size 14px
        color grey - 50%
    
    .header-icon
      padding 8px
      color grey - 50%
    
  #chat-msg-area
    flex-grow 1
    padding 0 12px
    // background green
    
  #chat-input
    height 64px
    flex-shrink 0
    // background yellow
    display flex
    display -webkit-flex
    align-items center
    justify-content center