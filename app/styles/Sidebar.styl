@import "application"

header-height = 64px

#sidebar-container
  width 100%
  height 100%
  // background primary

#sidebar-header
  height header-height
  width 100%
  position relative
  color white
  box-shadow 0 2px 6px rgba(0,0,0,0.12), 0 2px 4px rgba(0,0,0,0.12)
  display flex
  display -webkit-flex
  align-items center
  -webkit-user-select none
  z-index 2
  
  .team-name
    line-height header-height
    font-size 18px
    padding-left 12px
    padding-right 12px
    transition all 0.1s
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    cursor pointer
    flex-grow 1
    &:hover
      background-color primary-dark
  
  .header-icon
    flex-grow 0
    &:last-child
      margin-right 12px
  
#conversation-list
  height "calc(100% - %s)" % header-height
  width 100%
  overflow scroll
  color white
  
  .conversation-item
    width 100%
    height 72px
    background primary
    display flex
    display -webkit-flex
    position relative
    cursor pointer
    transition all 0.3s
    
    &:hover
      background primary-dark
    
    &.active
      background primary + 50%
      
      &:after
        content none
      
      .chat-main .chat-title
        font-weight 700
    
    &:after
      content ''
      position absolute
      width 80%
      height 1px
      bottom 0
      left 10%
      background primary-dark
    
    .chat-avatar
      padding 12px 12px 12px 12px
      
    .chat-body
      padding-top 12px
      padding-right 12px
      flex-grow 1
      max-width calc(100% - 73px)
    
    .chat-main
      display flex
      display -webkit-flex
      align-items baseline
      
      .chat-title
        flex-grow 1
        font-size 16px
        font-weight 400
        line-height 21px
        white-space nowrap
        overflow hidden
        text-overflow ellipsis
      
      .chat-time
        text-align right
        font-size 12px
        font-weight 300
        white-space nowrap
        margin-left 12px
    
    .chat-secondary
      font-size 12px
      line-height 19px
      margin-top 3px
      margin-right 24px
      font-weight 300
      display flex
      display -webkit-flex
      
      .chat-status
        white-space nowrap
        overflow hidden
        text-overflow ellipsis
      
      .chat-badge
        min-width 36px